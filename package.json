{
  "name": "resentence",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format-file": "prettier --write --config config/.prettierrc.json",
    "format": "git ls-files | egrep '\\.(js(on)?|scss|tsx?)?$' | xargs yarn run format-file",
    "lint": "lerna run lint",
    "publish-demo": "lerna run --scope resentence-demo deploy",
    "publish-lib": "lerna exec --scope resentence yarn publish",
    "start": "lerna run start --parallel",
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run pre-commit"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,json,scss,md}": [
      "yarn run format-file",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0"
  }
}
